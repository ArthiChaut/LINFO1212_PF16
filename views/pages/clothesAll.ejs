<!doctype html>
<html lang="fr">
<head>
  <%- include('../partials/head'); %>
  <link rel="stylesheet" href="/static/CSS/clothesAll.css">
  <title>Acheter vos habits</title>
</head>
<body>
  <header>         
    <%- include('../partials/header'); %>
  </header>
  <main>
    <div class="sidebar bar-block " style="display:none" id="mySidebar">
        <button onclick="w_close()" class="bar-item large" id="close_sidebar">Fermé &times;</button>
        <form id="filter-form"  method="post" action="/vetements">
          <label for="couleur">Couleur:</label>
          <select id="colorFilter" name="couleur">
            <option value=""></option>
            <option value='rouge'>Rouge</option>
            <option value='bleu'>Bleu</option>
            <option value='vert'>Vert</option>
            <option value='jaune'>Jaune</option>
            <option value='orange'>Orange</option>
            <option value='rose'>Rose</option>
            <option value='blanc'>Blanc</option>
            <option value='noir'>Noir</option>
            <option value='gris'>Gris</option>
            <option value='marron'>Marron</option>
            <option value='violet'>Violet</option>
            <option value='beige'>Beige</option>
            <option value='autre'>Autre</option>
          </select>
          <label for="taille">Taille:</label>
          <select id="sizeFilter" name="taille">
            <option value=""></option>
            <option value='XXL'>XXL</option>
            <option value='XL'>XL</option>
            <option value='L'>L</option>
            <option value='M'>M</option>
            <option value='S'>S</option>
            <option value='XS'>XS</option>
            <option value='XXS'>XXS</option>
          </select>
          <label for="genre">Genre:</label>
          <select id="genreFilter" name="genre">
            <option value=""></option>
            <option value='Homme'>Homme</option>
            <option value='Femme'>Femme</option> 
            <option value='Enfant'>Enfant</option>
            <option value="Unisex"> Unisex</option> 
          </select>
          <label for="type">Type:</label>
          <select id="typeFilter" name="type">
            <option value=""></option>
            <option value="pantalon">Pantalon</option>
            <option value="t-shirt">T-shirt</option>
            <option value="pull">Pull</option>
            <option value="veste">Veste</option>
            <option value="sweat">Sweat</option>
            <option value="robe">Robe</option>
            <option value="jupe">Jupe</option>
            <option value="chemise">Chemise</option>
            <option value="autre">Autre</option>
            <option value="short">Short</option>
            <option value="underwear">Underwear</option>
          </select>
          <label for="etat">Etat:</label>
          <select id=" etatFilter" name="etat">
            <option value=""></option>
            <option value='Neuf'>Neuf</option>
            <option value='Très bon état'>Très bon état</option> 
            <option value='Bon état'>Bon état</option>
            <option value="Occasion"> Occasion</option>
          </select>
          <input type="submit" value="Valider">
        </form>
    </div>  
    <div class="teal">
      <button class="button-filtre teal xlarge" onclick="w_open()">☰ FILTRES</button>
    </div>
    <div class="container" id="filtre-results">
      <% for( let i = 0; i < clothes.length;i++){let article = clothes[i]; %>
      <div class="grid-object">
        <img src="<%= article.image %>" alt="photo">
        <h2><%= article.type %></h2>
        <h3><%= article.user %></h3>
        <p><%= article.prix %></p>
        <a href="../info?image=<%=article.image%>&type=<%=article.type%>&marque=<%=article.marque%>&prix=<%=article.prix%>&couleur=<%=article.couleur%>&taille=<%=article.taille%>&genre=<%=article.genre%>&date=<%=article.createdAt.toDateString()%>&etat=<%=article.etat%>&user=<%=article.user%>&localisation=<%=article.localisation%>">Voir l'article</a>
        
      </div>
      <% } %>
    </div>
  </main>
  <footer>
    <%- include('../partials/footer'); %>
  </footer>
  
  <script>
    function w_open() {
      document.getElementById("mySidebar").style.display = "block";
    }
  
    function w_close() {
      document.getElementById("mySidebar").style.display = "none";
    }
  </script>


</body>
</html>

